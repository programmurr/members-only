extends layout

block content
  .navbar
    h2.nav-header Members Only 
    if currentUser
      .nav-links
        p #{currentUser.userName}
        a(href="/log-out") Log out 
    else
      .nav-links
        a(href="/sign-up") Sign Up
        a(href="/log-in") Log In


  if messages 
    .messages-container
    each message in messages 
      .message-container
      p #{message.body}
  else 
    .no-messages
      p There are no messages
  
